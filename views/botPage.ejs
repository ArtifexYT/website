<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("parts/head", { title: bot.name }) %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <script>window.IS_BOT_PAGE = true;</script>
    <meta property="og:title" content="<%= bot.name %> on discordboats.club" />
    <meta property="og:description" content="View <%= bot.name %>'s on discordboats.club: <%= bot.shortDescription %>">
    <meta property="og:image" content="<%= bot._discordAvatarURL %>" />
</head>
<body>
    <div class="header">
        <%- include("parts/header", { childBefore: bot.verified ? "" : `<div class="unverified-notice"><div class="container"><div class="unverified"><center><h5>This bot is currently unverified.</h5></center><center><h6>Only you can see it.</h6></center></div></div></div>` }) %>
    </div>
    <div class="main">
        <div class="container">
            <div class="bot-page">
                <div class="bp-top-info">
                    <!-- <div class="bot-image-container">
                        <img src="/boat.jpg" class="bot-image">
                    </div> -->
                    <div class="bp-head">
                        <a id="like-btn" href="#" data-bot-id="<%=bot.id%>" class="<%= typeof user == `object` ? `` : `modal-trigger` %>" data-target="auth-modal" style="width: 20vh; height: 20vh;">
                            <p class="toast center" id="like-btn-text"><%=bot.likeCount%></p>
                            <i class="fas fa-heart <%=bot._userLikes?`red-text`:`grey-text`%>" style="width: 20vh; height: 20vh;"></i>
                        </a>
                        <div class="bp-avatar">
                            <img class="responsive-img circle" alt="Bot Avatar" src="<%= bot._discordAvatarURL %>">
                        </div>
                        <div class="bp-title">
                            <h4><%= bot.name %></h4>
                            <div class="bp-chips">
                                <div class="row">
                                    <% if (bot.library) { %>
                                        <div class="chip red lighten-2 bp-chip"><%= bot.library %></div>
                                    <% } %>
                                    <% if (typeof bot.online == 'boolean') { %>
                                        <div class="chip <%= bot.online ? 'green' : 'red' %> lighten-2 bp-chip"><%= bot.online ? 'online' : 'offline' %></div>
                                    <% } %>
                                    <% if (bot.servers) { %>
                                        <div class="chip lime lighten-2 bp-chip"><%= bot.servers %> servers</div>
                                    <% } %>
                                    <% if (!bot.verified) { %>
                                        <div class="chip red lighten-3 bp-chip">unverified</div>
                                    <% } %>
                                    <% if (bot.prefix) { %>
                                        <div class="chip purple lighten-3 bp-chip"><%= bot.prefix %> prefix</div>
                                    <% } %>
                                    <% if (bot._ownerTag) { %>
                                        <div class="chip blue lighten-1 bp-chip">owned by <%= bot._ownerTag %></div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bp-info">
                        <subtitle><%= bot.shortDescription %></subtitle>
                        <hr>
                        <div class="container">
                            <div class="bp-buttons">
                                <div class="row">
                                    <div class="col s4">
                                        <a target="_blank" href="/invite_url/<%=bot.id%>" class="waves-effect waves-light btn orange bp-button">Invite</a>
                                    </div>
                                    <div class="col s4">
                                        <a <%= typeof bot.website == 'string' ? '' : 'disabled' %> target="_blank" href="<%= bot.website %>" class="waves-effect waves-light btn orange bp-button">Website</a>
                                    </div>
                                    <div class="col s4">
                                        <a <%= typeof bot.github == 'string' ? '' : 'disabled' %> target="_blank" href="<%= bot.github %>" class="waves-effect waves-light btn orange bp-button">Github</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <p><%- bot._markedDescription %></p>
                    </div>
                </div>
                <!-- <div class="bp-comments">
                    <hr>
                    <h4>Comments</h4>
                    <p>This bot has no comments yet.</p>
                </div> -->
            </div>
            <div id="auth-modal" class="modal">
                <div class="modal-content">
                    <h4 class="red-text">Error</h4>
                    <p>You need to be logged in to like bots!</p>
                </div>
                <div class="modal-footer">
                    <a class="modal-action modal-close waves-effect waves-teal btn-flat" href="/discord/login">Login</a>
                </div>
            </div>
        </div>        
    </div>
</body>
<footer class="blue lighten-3 page-footer">
    <%- include("parts/footer") %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mo-js/0.288.2/mo.min.js"></script>
    <%- include("parts/scripts") %>
</footer>
</html>

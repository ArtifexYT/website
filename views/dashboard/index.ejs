<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../parts/head") %>
    </head>
    <body>
        <div class="header">
            <%- include("../parts/header") %>
        </div>
        <div class="main">
            <div class="container">
                <a href="/dashboard/new" class="waves-effect waves-light btn blue lighten-3">New bot</a>
                
                <div class="row">
                    <h3>My Bots</h3>
                </div>
                <% if (rawBots.length == 0) { %>
                    <p>You have no bots! <a href="/dashboard/new">Add one?</a></p>
                <% } else { %>
                    <div class="bot-cards">
                            <!-- Bot cards includes can go here -->
                        <%- myBots.map(chunk => `<div class="row bot-card">${chunk.map(bot => include("../parts/botCard", {bot}))}</div>`) %>
                    </div>
                <% } %>
            </div>
        </div>
    </body>
    <footer>
        <%- include("../parts/footer") %>
    </footer>
</html>
